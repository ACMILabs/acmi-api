k": [{"id": 2354235, "title": "The Heartbreak kid", "work_id": 85064, "role": "production company", "role_id": 941, "is_primary": true}], "also_known_as": "", "date_of_birth": "", "date_of_death": "", "genders": [], "languages": [], "places_of_operation": [], "biography": "", "biography_author": null, "date_of_biography": "2023-05-09T20:01:26.432971+10:00", "external_links": [], "uuid": "a8be4baf-c2b2-4834-9414-fc982c398776", "source": {"name": "Vernon", "slug": "vernon"}, "source_identifier": "14133", "external_references": [{"id": 38611, "source": {"name": "Wikidata", "slug": "wikidata"}, "source_identifier": "Q121034307"}], "date_modified": "2023-09-06T02:06:19.382107+10:00"}, {"id": 26968, "name": "Sidney J. Furie", "roles_in_work": [{"id": 2346857, "title": "The Entity", "work_id": 93597, "role": "director", "role_id": 938, "is_primary": true}, {"id": 1991350, "title": "Hit", "work_id": 87000, "role": "director", "role_id": 938, "is_primary": true}, {"id": 2285180, "title": "The Young ones", "work_id": 85059, "role": "director", "role_id": 938, "is_primary": true}, {"id": 1991473, "title": "The Ipcress file", "work_id": 87201, "role": "director", "role_id": 938, "is_primary": true}, {"id": 1997054, "title": "The Leather boys", "work_id": 93107, "role": "director", "role_id": 938, "is_primary": true}], "also_known_as": "Sidney Joseph Furie", "date_of_birth": "1933-02-28", "date_of_death": null, "genders": [{"id": 9, "name": "Male", "slug": "male"}], "languages": [{"id": 1, "name": "English", "slug": "english"}], "places_of_operation": [{"id": 36, "name": "Canada", "slug": "canada"}], "biography": "Sidney Joseph Furie (born February 28, 1933) is a Canadian film director, screenwriter, and producer best known for his extensive work in both British and American cinema between the 1960s and early 1980s. Like his contemporaries Norman Jewison and Ted Kotcheff, he was one of the earliest Canadian directors to achieve mainstream critical and financial success outside their native country at a time when its film industry was virtually nonexistent. He won a BAFTA Film Award and was nominated for a Palme d'Or for his work on the acclaimed spy thriller The Ipcress File (1965) starring Michael Caine.\nHe is considered by some an auteur director, elevating otherwise unremarkable genre films through strong, creative visuals, and atmospheric direction. His horror film The Entity (1982) was declared by director Martin Scorsese as one of the scariest movies of all time, and his Vietnam War film The Boys in Company C (1978) was a major influence on Stanley Kubrick's Full Metal Jacket (1987). He is also the co-creator of the Iron Eagle action film franchise which began in 1986, and directed three of its four entries.\n\n", "biography_author": "Wikidata", "date_of_biography": "2022-05-19T13:05:43.216057+10:00", "external_links": [{"id": 3106, "uri": "https://en.wikipedia.org/wiki/Sidney_J._Furie"}], "uuid": "b2b158b8-734c-4d23-a791-21e1a7b95ac2", "source": {"name": "Vernon", "slug": "vernon"}, "source_identifier": "28807", "external_references": [{"id": 13180, "source": {"name": "Wikidata", "slug": "wikidata"}, "source_identifier": "Q1359422"}, {"id": 13181, "source": {"name": "VIAF", "slug": "viaf"}, "source_identifier": "86205509"}, {"id": 13182, "source": {"name": "LOC Auth", "slug": "loc-auth"}, "source_identifier": "n89631242"}, {"id": 13183, "source": {"name": "WorldCat", "slug": "worldcat"}, "source_identifier": "lccn-n89631242"}], "date_modified": "2023-09-13T12:32:44.850886+10:00"}, {"id": 26967, "name": "Associated British Picture Corporation", "roles_in_work": [{"id": 3084597, "title": "Death at bargain prices. Castle De'ath. The Master minds", "work_id": 93102, "role": "production company", "role_id": 941, "is_primary": true}, {"id": 2684656, "title": "The Great Defender cinema slide", "work_id": 119841, "role": "production company", "role_id": 941, "is_primary": true}, {"id": 2285174, "title": "The Young ones", "work_id": 85059, 